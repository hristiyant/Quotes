<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Details.QuoteDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strange"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_topic_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cool"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_quote_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/fix"
            android:textAlignment="center" />

    </LinearLayout>

</FrameLayout>